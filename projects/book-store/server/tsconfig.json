{
  "compilerOptions": {
    "target": "ES2020", // Specifies the JavaScript version for the output
    "module": "commonjs", // Standard module system for Node.js
    "rootDir": "./src", // All your TypeScript source code will be in a 'src' folder
    "outDir": "./dist", // Compiled JavaScript will go into a 'dist' folder
    "esModuleInterop": true, // Allows for better compatibility between CommonJS and ES modules
    "forceConsistentCasingInFileNames": true, // Enforces consistent file naming
    "strict": true, // Enables all strict type-checking options (highly recommended)
    "skipLibCheck": true, // Skips type checking of declaration files (speeds up compilation)
    "resolveJsonModule": true // Allows importing .json files as modules
  },
  "include": ["src/**/*"], // Tells TypeScript to only compile files within the 'src' directory
  "exclude": ["node_modules", "**/*.spec.ts"] // Folders/files to ignore during compilation
}
